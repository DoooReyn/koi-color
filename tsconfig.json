{
    "include": ["./src/*", "./scripts/*"],
    "compilerOptions": {
        "target": "ES2021",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "useUnknownInCatchVariables": false,
        "typeRoots": ["./node_modules/@types", "./node_modules/@cocos/creator-types/engine"]
    },
    "types": ["jest", "cc"]
}
